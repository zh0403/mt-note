{
    "manifest_version": 3,
    "name": "mt_note",
    "version": "1.0",
    "description": "Decentralized notes for Mantle transactions.",

    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },

    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },

    "content_scripts": [
      {
        "matches": ["https://sepolia.mantlescan.xyz/tx/*", "https://mantlescan.xyz/tx/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    
    "permissions": ["storage"],
    "host_permissions": ["https://sepolia.mantlescan.xyz/*", "https://mantlescan.xyz/*"],
    "web_accessible_resources": [
      {
        "resources": ["ethers.js", "crypto-js.js", "abi.js", "inpage.js", "icon.png"],
        "matches": ["<all_urls>"]
      }
    ]
  }